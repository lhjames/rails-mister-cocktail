<h1>Cocktails</h1>

<div class="cards">
	<div class="card_cocktail">
			<% @cocktails.each do |cocktail| %>
		<%= link_to cocktail_path(cocktail), class: "restau_link" do %>
		  <div class="card_restau">
		  	<img src="https://source.unsplash.com/160x90/?cocktail" alt="pic">
		  	<p><%= cocktail.name %></p>
		  </div>
		<% end %>
	<% end %>
	</div>
</div>

<%= link_to 'Add new cocktail', new_cocktail_path(@cocktail) %>