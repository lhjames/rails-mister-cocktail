<div class="banner" style="background-image: url(<%= asset_path 'banner.jpg'%>)">	
	<h1>the neon bar</h1>
</div>

<div class="container">
	<div class="cards row">
		<% @cocktails.each do |cocktail| %>
			<div class="col-3">
				<%= link_to cocktail_path(cocktail), class: "restau_link" do %>
					<div class="card_cocktail">
						<% if cocktail.photo.attached? %>
							<%= cl_image_tag cocktail.photo.key, crop: :fill%> 
						<% else %>
			    		<%= "no picture" %>
			  		<% end %>
			  		<div class="text-center">
							<p><%= cocktail.name %></p>
						</div>
					</div>
				<% end %>
				</div>
			<% end %>	
	</div>
		<div class="button">
		<%= link_to 'Add your own cocktail', new_cocktail_path(@cocktail) %>	
	</div>
</div>